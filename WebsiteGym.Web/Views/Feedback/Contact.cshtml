@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model WebsiteGym.Web.Models.FeedbackModel

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Gym Management - Contact Us</title>
    <!-- Bootstrap CSS -->
    <link rel="stylesheet"
          href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" />
    <!-- Custom CSS -->
    <link rel="stylesheet" href="~/Content/home_style.css" />
</head>
<body>
    <!-- Main Content -->
    <main class="container py-5">
        <section id="contact">
            <h2 class="mb-4" style="padding-top:50px;">Get in Touch</h2>
            <p>If you have any questions, please feel free to reach out to us:</p>
            <ul>
                <li>Email: info@gymmanagement.com</li>
                <li>Phone: (123) 456-7890</li>
                <li>Address: 123 Fitness St, Workout City, Fitland</li>
            </ul>

            @using (Html.BeginForm("CreateFeedback", "Feedback", FormMethod.Post, new { @class = "mt-4" }))
            {
                @Html.AntiForgeryToken()

                <div class="mb-3">
                    @Html.LabelFor(m => m.UserName, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Your Name" })
                    @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Your Email", type = "email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.FeedbackMessage, new { @class = "form-label" })
                    @Html.TextAreaFor(m => m.FeedbackMessage, new { @class = "form-control", rows = 5, placeholder = "Your Message" })
                    @Html.ValidationMessageFor(m => m.FeedbackMessage, "", new { @class = "text-danger" })
                </div>

                <button type="submit" class="btn btn-primary">Send Message</button>
            }
        </section>
    </main>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="@Url.Content("~/Scrips/home_script.js")"></script>

</body>
</html>

