@{ 
     Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html lang="en">
<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Gym Management - Home</title>
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
     <link rel="stylesheet" href="@Url.Content("~/Content/home_style.css")">
</head>
<body>
    <div class="container-fluid py-4" style="padding:0%;">
        <!-- Hero Section -->
        <section id="hero">
            <div id="heroCarousel" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active">
                        <img src="@Url.Content("~/Content/img/shtanga-trenazhernyy-zal-gym.jpg")" class="d-block w-100" alt="Slide 1">
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/Content/img/pexels-anush-1229356.jpg")" class="d-block w-100" alt="Slide 2">
                    </div>
                    <div class="carousel-item">
                        <img src="@Url.Content("~/Content/img/360_F_338166432_0o8qtAQIE5VMynSeJql9rekVtDaUiPKZ.jpg")" class="d-block w-100" alt="Slide 3">
                    </div>
                </div>
            </div>

            <div class="hero-overlay">
                <h1>Push Your Limits</h1>
                <p>Experience the best training programs tailored to your needs.</p>
                <a href="#services" class="btn btn-primary btn-lg">Join Now &#8595;</a>
            </div>
        </section>

        <!-- Services Section -->
        <section id="services" class="py-5 text-center">
            <div class="container">
                <h2 class="mb-4">Our Services</h2>
                <div class="row">
                    <div class="col-md-4">
                        <div class="card service-card">
                            <img src="@Url.Content("~/Content/img/Best-Personal-Trainers-in-Edgewater-MD.png")" class="card-img-top" alt="Personal Training">
                            <div class="card-body">
                                <h3>Personal Training</h3>
                                <p>One-on-one coaching with expert trainers.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card service-card">
                            <img src="@Url.Content("~/Content/img/group-workouts-1-1-1024x536.jpg")" class="card-img-top" alt="Group Classes">
                            <div class="card-body">
                                <h3>Group Classes</h3>
                                <p>Exciting HIIT, yoga, and strength classes.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="card service-card">
                            <img src="@Url.Content("~/Content/img/f710044bf79a4b1f5d8b085e5e5d9711_M.jpg")" class="card-img-top" alt="Nutrition Coaching">
                            <div class="card-body">
                                <h3>Nutrition Coaching</h3>
                                <p>Personalized meal plans for better results.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </section>
        <div class="text-center button-container">
            <a href="@Url.Action("Services", "Home")" class="btn btn-primary btn-lg">See Services</a>
        </div>

        <!-- Membership Section -->
        <section id="membership" class="container my-5">
            <h2 class="text-center">Our Memberships</h2>
            <div class="row membership-cards">
                @if (Model != null && Model.Count > 0)
                {
                    foreach (var membership in Model)
                    {
                        <div class="col-md-4 d-flex">
                            <div class="card text-center w-100">
                                <div class="card-body">
                                    <h3>@membership.MembershipName</h3>
                                    <p>@membership.Details</p>
                                    <h5 class="text-danger">$@membership.Price/month</h5>
                                </div>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="col-12 text-center mt-5">
                        <h4 class="text-muted">No memberships available at the moment.</h4>
                    </div>
                }
            </div>
            <div class="text-center button-container mt-4">
                <a href="@Url.Action("Membership", "Home")" class="btn btn-primary btn-lg">See Memberships</a>
            </div>
        </section>


        <!-- About Us Section -->
        <section id="about" class="py-5 bg-light text-center">
            <div class="container">
                <h2>About MadGym</h2>
                <p>Welcome to GymMaster, your all-in-one fitness membership platform designed to simplify and energize your journey to better health. </p>
                <a href="@Url.Action("about", "Home")" class="btn btn-primary">Learn More</a>
            </div>
        </section>
    </div>
          <!-- Bootstrap JS -->
          <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
          <script src="~/Scripts/home_script.js"></script>
</body>
</html>
