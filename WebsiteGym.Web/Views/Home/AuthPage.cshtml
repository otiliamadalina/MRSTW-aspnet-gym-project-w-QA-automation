
@model WebsiteGym.Web.Models.AuthPageModel

@{
     Layout = "~/Views/Shared/_LayoutLogin.cshtml";

}

<style>
     input.input-validation-error:placeholder-shown {
          border: 1px solid #ccc;
     }

     input.input-validation-error {
          border: 2px solid red;
     }

     input.valid {
          border: 2px solid black;
     }
</style>

<!DOCTYPE html>
<html lang="en">
<head>
     <meta charset="UTF-8">
     <meta name="viewport" content="width=device-width, initial-scale=1.0">
     <title>Gym Login</title>
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap/5.3.0/css/bootstrap.min.css">
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
     <link rel="stylesheet" href="~/Content/logstyle.css">
</head>


<body>

     <div class="container-fluid d-flex justify-content-center pt-5">
          <div class="row shadow-lg bg-white rounded overflow-hidden position-relative" style="max-width: 900px; width: 100%; height: 500px">

               <!-- Left Side - Image and Text -->
               <div id="madGymImageContainter" class="col-md-6 d-none d-md-block position-relative p-5 text-white text-center left-section transition-container">
                    <div class="overlay"></div>
                    <div class="position-relative z-index-1">
                         <h1 id="madGymText" class="fw-bold">MAD GYM</h1>
                         <p id="unlockSubtext" > Unlock your potential with us!</p>
                    </div>
               </div>

               <!-- Left Side - Register Form (Hidden Initially) -->
               <div class="col-md-6 p-5 text-center form-container d-none" id="registerFormContainer">
                   <h2 id="joinUsText" class="fw-bold">Join Us</h2>
                   <p id="createAccText" class="text-muted">Create an account</p>
                   @using (Html.BeginForm("Register", "Account", FormMethod.Post))
                   {
                       @Html.AntiForgeryToken()
                       @Html.ValidationSummary(true)
                       <div id="registerUsernameField" class="mb-3">
                           @Html.TextBoxFor(m => m.Register.UserName, new
                           {
                               placeholder = "Username",
                               title = "Please enter your username",
                               type = "text",
                               value = "",
                               id = "r+egisterUserName",
                               @class = "form-control",
                           })
                       </div>

                       <div id="registerEmailField" class="mb-3">
                           @Html.TextBoxFor(m => m.Register.Email, new
                           {
                               placeholder = "E-mail",
                               title = "Please enter your email 'example@gmail.com'",
                               Type = "email",
                               value = "",
                               id = "registerEmail",
                               @class = "form-control",
                           })
                       </div>

                       <div id="registerPasswordField" class="mb-3">
                           @Html.TextBoxFor(m => m.Register.Password, new
                           {
                               placeholder = "Password",
                               Type = "password",
                               title = "Please enter your password",
                               value = "",
                               id = "registerPassword",
                               @class = "form-control",
                           })
                       </div>
                       <button type="submit" class="btn btn-primary w-100" id="registerSubmitBtn">REGISTER</button>
                   }

                   <p id="haveAccSubtext" class="mt-3 text-muted">
                       Already have an account? 
                       <a href="#" class="text-primary" id="loginLink">Login</a>
                   </p>
               </div>

               <!-- Right Side - Login Form -->
               <div class="col-md-6 p-5 text-center form-container" id="loginFormContainer">
                   <h2 id ="welcomeText" class="fw-bold">Welcome</h2>
                   <p id = "loginSubtext" class="text-muted">Login with Username</p>
                   @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                   {
                       @Html.AntiForgeryToken()
                       <div id="usernameField" class="mb-3">
                           @Html.TextBoxFor(m => m.Login.UserName, new
                           {
                               placeholder = "Username",
                               title = "Please enter your username",
                               type = "text",
                               value = "",
                               id = "loginUserName",
                               @class = "form-control",
                           })
                       </div>

                       <div id="passwordField" class="mb-3">
                           @Html.TextBoxFor(m => m.Login.Password, new
                           {
                               placeholder = "Password",
                               Type = "password",
                               title = "Please enter your password",
                               value = "",
                               id = "loginPassword",
                               @class = "form-control",
                           })
                       </div>
                       <button type="submit" class="btn btn-primary w-100" id="loginSubmitBtn">LOGIN</button>
                   }


                   <p id="orSubtext" class="mt-3 text-muted">OR</p>
                   <div class="d-flex justify-content-center gap-2">
                       <button id="googleBtn" class="btn btn-outline-secondary"><i class="fab fa-google"></i></button>
                       <button id="facebookBtn" class="btn btn-outline-secondary"><i class="fab fa-facebook"></i></button>
                       <button id="appleBtn" class="btn btn-outline-secondary"><i class="fab fa-apple"></i></button>
                   </div>

                   <p id="registerNowSubtext" class="mt-3 text-muted">
                       Don't have an account? 
                       <a href="#" class="text-primary" id="registerLink">Register Now</a>
                   </p>
                   <p id="forgotPasswordSubtext" class="mt-3 text-muted">
                       Forgot password? 
                       <a id="forgotPasswordLink" class="text-primary" href="@Url.Action("ForgotPassword", "Account")">Reset Password</a>
                   </p>
               </div>


          </div>
     </div>
     <script src="~/Scripts/logscript.js"></script>
     <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
     <script src="~/Scripts/home_script.js"></script>
     <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
     <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

</body>
</html>
