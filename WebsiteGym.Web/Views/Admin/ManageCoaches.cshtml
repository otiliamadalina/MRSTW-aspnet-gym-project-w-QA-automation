@model WebsiteGym.Web.Models.CoachViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">

<div class="container mt-5">

    <h3 class="text-center fw-bold text-black mb-4">Manage Coaches</h3>

    @using (Html.BeginForm("ManageCoaches", "Admin", FormMethod.Post))
    {
        <div class="row justify-content-center">
            <div class="col-md-6">

                <div class="mb-3">
                    @Html.LabelFor(m => m.Name, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", id = "Name" })
                    @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Surname, new { @class = "form-label fw-semibold" })
                    @Html.TextBoxFor(m => m.Surname, new { @class = "form-control", id = "Surname" })
                    @Html.ValidationMessageFor(m => m.Surname, "", new { @class = "text-danger" })
                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Birthdate)
                    @Html.TextBoxFor(m => m.Birthdate, new { @type = "date", @class = "form-control" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Speciality, new { @class = "form-label fw-semibold" })
                    @Html.TextAreaFor(m => m.Speciality, new { @class = "form-control", rows = 3, id = "Speciality" })
                    @Html.ValidationMessageFor(m => m.Speciality, "", new { @class = "text-danger" })
                </div>

                <div class="text-center">
                    <button type="submit" class="btn btn-success px-4">Add Coach</button>
                </div>

            </div>
        </div>
    }

    @if (ViewBag != null && ViewBag.Coaches != null)
    {
        <h2 class="text-center fw-bold text-black mt-5 mb-4">List of Coaches</h2>

        <table class="table table-bordered text-center border-3">
            <thead class="table-dark">
                <tr>
                    <th class="fw-bold">Coach Name</th>
                    <th class="fw-bold">Surname</th>
                    <th class="fw-bold">Birthdate</th>
                    <th class="fw-bold">Speciality</th>
                     <th class="fw-bold">Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var coach in ViewBag.Coaches)
                {
                <tr>
                    <td>@coach.Name</td>
                    <td>@coach.Surname</td>
                    <td>@coach.Birthdate</td>
                    <td>@coach.Speciality</td>
                    <td>
                        
                        <a href="@Url.Action("DeleteCoach", "Admin", new { id = coach.Id })" class="btn btn-danger btn-sm" onclick="return confirm('Are you sure you want to delete this coach?');">Delete</a>
                    </td>
                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-center text-muted fw-semibold mt-5">No coaches available</p>
    }

</div>

<script src="https://cdn.jsdelivr.net/npm/jquery@3.6.0/dist/jquery.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
