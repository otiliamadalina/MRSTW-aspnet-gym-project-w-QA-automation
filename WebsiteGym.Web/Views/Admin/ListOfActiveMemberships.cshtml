<!DOCTYPE html>
<html>
<head>
     <meta name="viewport" content="width=device-width" />
     <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
     <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
     <title></title>
</head>
<body>
     <div>

          <h3 class="text-center fw-bold text-black mb-4">List Of Active Memberships</h3>
          <form>
               <table class="table table-responsive table-hover">
                    <thead>
                         <tr class="table-active">
                              <th>ID</th>
                              <th>Membership Type</th>
                              <th>Date of Purchase</th>
                              <th>Expiration Date</th>
                              <th>Action</th>
                         </tr>
                    </thead>
                    <tbody>
                         @if (ViewBag.UserMemberships != null)
                         {
                              foreach (var active in ViewBag.UserMemberships)
                              {

                                   <tr>
                                        <td>@active.Id</td>
                                        <td>@active.MembershipType</td>
                                        <td>@active.MembershipPurchaseDate.ToString("dd/MM/yyyy")</td>
                                        <td>@active.MembershipExperationDate.ToString("dd/MM/yyyy")</td>
                                        <td>
                                             <div class="btn btn-danger">
                                                  Remove
                                             </div>
                                        </td>
                                   </tr>

                              }

                         }
                         else
                         {
                              <tr>
                                   <td colspan="5" class="text-center">No Memberships found.</td>
                              </tr>
                         }

                    </tbody>
               </table>
          </form>
     </div>
</body>
</html>
